html 
    head    
        meta(charset='utf-8')
        title Chessboard
        meta(name='viewport' content='width=device-width, initial-scale=1')

        //- link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css')
        //- script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
        style 
            include styles.css

    body 
        div.container
            - let columns = ["A", "B", "C", "D", "E", "F", "G", "H"], row = 9
            div.board
                while --row
                    label.row-labels= row
                    div.row(id=row)
                        each col in columns
                            div(class=`column ${activeCells.includes(col+row) ? "active" : ""}` id=col onclick=`(${setCurrentPosition})("${col}", "${row}")`)
                                if (col+row) == currentPosition
                                    img(class="knight-icon" src="knight.png" alt="Knight")
                div.column-labels
                    each col in columns
                        label= col

            div.moves-list 
                if currentPosition
                    h3 Available Moves for Knight from 
                        u #{currentPosition}: 
                    ul
                        each cell in activeCells
                            li= cell
                else 
                    h3 Please select a cell on the chessboard


